<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WasteCreative" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textColorPrimary">@color/deep_koamaru</item>
        <item name="textColorSecondary">@color/blue_bell</item>
        <item name="outlineColor">@color/gray_500</item>
        <item name="formColor">@color/gray_200</item>

    </style>

    <style name="Theme.WasteCreative.Header_1">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.WasteCreative.Header_2">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.WasteCreative.Header_3">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.WasteCreative.Paragraph_1">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.WasteCreative.Paragraph_2">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.WasteCreative.SmallText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WasteCreative.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WasteCreative.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WasteCreative.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>