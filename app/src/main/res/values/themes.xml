<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WasteCreative" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/deep_koamaru</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="textColorPrimary">@color/deep_koamaru</item>
        <item name="textColorSecondary">@color/blue_bell</item>
        <item name="outlineColor">@color/gray_500</item>
        <item name="formColor">@color/gray_200</item>

    </style>

    <style name="Theme.WasteCreative.WrappedView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.WasteCreative.Header_1" parent="Theme.WasteCreative.WrappedView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Theme.WasteCreative.Header_2" parent="Theme.WasteCreative.WrappedView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Theme.WasteCreative.Header_3" parent="Theme.WasteCreative.WrappedView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.WasteCreative.Paragraph_1" parent="Theme.WasteCreative.WrappedView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Theme.WasteCreative.Paragraph_2" parent="Theme.WasteCreative.WrappedView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.WasteCreative.Paragraph_3" parent="Theme.WasteCreative.WrappedView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.WasteCreative.SmallText" parent="Theme.WasteCreative.WrappedView">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WasteCreative.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.WasteCreative.TransparentStatusBar" parent="Theme.WasteCreative.NoActionBar">
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
    </style>

    <style name="Theme.WasteCreative.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.WasteCreative.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>
    <style name="Theme.WasteCreative.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WasteCreative.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/textColorPrimary</item>

        <item name="android:textColorPrimary">?attr/textColorPrimary</item>
        <item name="android:textColorSecondary">?attr/textColorSecondary</item>
        <item name="actionMenuTextColor">?attr/textColorPrimary</item>
        <item name="actionOverflowButtonStyle">?attr/textColorPrimary</item>
        <item name="drawerArrowStyle">?attr/textColorPrimary</item>
        <item name="android:textColorHint">?attr/textColorSecondary</item>

    </style>
    <style name="TitleToolbarCollapse">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/nav_bar_item_tint</item>
        <item name="itemTextColor">@color/nav_bar_item_tint</item>
    </style>
</resources>